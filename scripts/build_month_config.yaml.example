# ================================================================
# 月別雑記ページ生成スクリプト 設定ファイル（サンプル）
# ================================================================
# 
# このファイルをコピーして "build_month_config.yaml" として保存し、
# 必要に応じて値を変更してください。
#
# 使い方:
#   python build_month.py 2025 12 ./txt/zakki/2025/12/days --config build_month_config.yaml
#

# ================================================================
# 記事の並び順
# ================================================================
# - "desc": 新しい順（デフォルト）- 最新の記事が上に表示されます
# - "asc": 古い順 - 古い記事から時系列順に表示されます
sort_order: "desc"

# ================================================================
# 省略処理の設定
# ================================================================
# 記事プレビューの表示方法を細かく制御できます
truncate:
  # 最大文字数（プレビューに含める最大の文字数）
  max_chars: 300
  
  # 最小要素数（この数まで必ず表示）
  # 文字数制限に達しても、この数の要素は必ず表示されます
  min_elements: 2
  
  # 最大要素数（これ以上は表示しない）
  max_elements: 6
  
  # 段落の切り詰め文字数
  # この長さを超える段落は "..." で省略されます
  text_truncate_length: 120
  
  # リストの最大項目数
  # これを超える項目は "... (他N項目)" と表示されます
  max_list_items: 3
  
  # リスト1項目あたりの推定文字数
  # 文字数カウントに使用されます
  list_item_estimate: 25

# ================================================================
# デバッグモード
# ================================================================
# true にすると、処理の詳細をコンソールに出力します
# 問題が発生した場合や、動作を確認したい場合に有効化してください
debug: false

# ================================================================
# バックアップの作成
# ================================================================
# true にすると、既存ファイルを上書きする前に ".bak" ファイルを作成します
# false にすると、バックアップを作成せずに直接上書きします
create_backup: true

# ================================================================
# 前後月の探索範囲
# ================================================================
# ナビゲーションリンクで、最大何ヶ月前後まで探すかを指定します
# 例: 24 の場合、前後2年分の月を探索します
adjacent_month_search_range: 24

