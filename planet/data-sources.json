{
  "version": "2.0",
  "description": "Planet Aggregator v2 データソース設定",
  "dataSources": [
    {
      "id": "tanoshii_health",
      "type": "misskey",
      "enabled": true,
      "config": {
        "instanceUrl": "https://tanoshii.site",
        "username": "health",
        "displayName": "tanoshii.site",
        "sourceIconImage": "./tanoshiisite.jpg",
        "description": "メインのMisskeyアカウント"
      },
      "fetchSettings": {
        "maxPosts": 50,
        "includeReplies": false,
        "includeReblogs": false,
        "rateLimit": 30000,
        "timeBasedFetch": true,
        "daysBack": 3,
        "maxImages": 6,
        "useProxy": false
      }
    },
    {
      "id": "misskey_io_yuinoid",
      "type": "misskey",
      "enabled": true,
      "config": {
        "instanceUrl": "https://misskey.io",
        "username": "yuinoid",
        "displayName": "misskey.io",
        "sourceIconImage": "./misskeyio.webp",
        "description": "misskey.ioの投稿"
      },
      "fetchSettings": {
        "maxPosts": 20,
        "includeReplies": false,
        "includeReblogs": false,
        "rateLimit": 30000,
        "timeBasedFetch": true,
        "daysBack": 3,
        "maxImages": 6,
        "useProxy": true
      }
    },
    {
      "id": "mistodon_healthcare",
      "type": "mastodon",
      "enabled": true,
      "config": {
        "instanceUrl": "https://mistodon.cloud",
        "username": "healthcare",
        "displayName": "mistodon.cloud",
        "sourceIconImage": "./mistodon-cloud.jpg",
        "description": "MastodonアカウントのHealthcare"
      },
      "fetchSettings": {
        "maxPosts": 20,
        "includeReplies": false,
        "includeReblogs": false,
        "rateLimit": 20000,
        "timeBasedFetch": true,
        "daysBack": 3,
        "maxImages": 6,
        "useProxy": false
      }
    },
    {
      "id": "site_rss",
      "type": "rss",
      "enabled": true,
      "config": {
        "feedUrl": "../rss.xml",
        "displayName": "100%health RSS",
        "sourceIconImage": "../icon.webp",
        "description": "サイトの更新情報RSS"
      },
      "fetchSettings": {
        "maxPosts": 20,
        "includeReplies": false,
        "includeReblogs": false,
        "rateLimit": 60000,
        "timeBasedFetch": true,
        "daysBack": 3,
        "maxImages": 6,
        "useProxy": false
      }
    }
  ],
  "globalSettings": {
    "autoRefreshInterval": 1800000,
    "maxTotalPosts": 100,
    "defaultCacheDuration": 600000,
    "timeBasedFetch": true,
    "daysBack": 7,
    "recommendedConfig": {
      "timeBasedFetch": true,
      "daysBack": 7,
      "misskey": {
        "maxPosts": 30,
        "rateLimit": 30000
      },
      "mastodon": {
        "maxPosts": 20,
        "rateLimit": 20000
      },
      "rss": {
        "maxPosts": 10,
        "rateLimit": 60000
      }
    }
  },
  "configPresets": {
    "fast": {
      "maxPosts": 10,
      "daysBack": 3,
      "autoRefreshInterval": 300000,
      "timeBasedFetch": true,
      "useProxy": true,
      "description": "高速モード（少ない投稿数、短い間隔）"
    },
    "standard": {
      "maxPosts": 20,
      "daysBack": 5,
      "autoRefreshInterval": 1800000,
      "timeBasedFetch": true,
      "useProxy": true,
      "description": "標準モード（バランスの取れた設定）"
    },
    "detailed": {
      "maxPosts": 50,
      "daysBack": 7,
      "autoRefreshInterval": 3600000,
      "timeBasedFetch": true,
      "useProxy": true,
      "description": "詳細モード（多くの投稿数、長い間隔）"
    },
    "offline": {
      "maxPosts": 20,
      "daysBack": 30,
      "autoRefreshInterval": 0,
      "timeBasedFetch": false,
      "useProxy": false,
      "description": "オフラインモード（プロキシなし、時間フィルタリングなし）"
    }
  },
  "_settings_help": {
    "useProxy": "プロキシの使用設定。true: プロキシ経由でアクセス（CORS回避）、false: 直接アクセス（高速だがCORSエラーの可能性）",
    "timeBasedFetch": "時間ベース取得の有効/無効（グローバル設定）",
    "daysBack": "過去何日分の投稿を取得するか（グローバル設定）",
    "maxPosts": "最大取得投稿数",
    "rateLimit": "API呼び出し間隔（ミリ秒）",
    "autoRefreshInterval": "自動更新間隔（ミリ秒）",
    "maxTotalPosts": "最大総投稿数",
    "defaultCacheDuration": "デフォルトキャッシュ期間（ミリ秒）"
  }
}
